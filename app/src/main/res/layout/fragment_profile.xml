<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bottomnav.NormalUserProfile"
    android:background="@drawable/background">



    <RelativeLayout
        android:id="@+id/profile_container"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/whitecard2"
        android:elevation="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ben_sweet" />

        <TextView
            android:id="@+id/nametv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="20dp"
            android:text="Name"
            android:textColor="@color/orange"
            android:textSize="26sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/emailtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nametv"
            android:layout_marginStart="130dp"
            android:layout_marginTop="5dp"
            android:text="email"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="italic" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/editprofileRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profile_container"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/whitecard3"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/NormalEditPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_edit_profile"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/edit_profile_text"
            android:textColor="#050505"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/edit_profile_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            app:tint="#050505"
            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/applyForClubUserRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editprofileRelativeLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/whitecard3"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/applyForClubUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_apply_for_club_user"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:text="@string/apply_for_club_user_text"
            android:textColor="#050505"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/apply_for_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:foregroundGravity="center"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            app:tint="#050505"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/viewEventsRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/applyForClubUserRelativeLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/whitecard3"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/viewEventsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:text="@string/view_events_text"
            android:textColor="#050505"
            android:textSize="20sp"
            android:gravity="center"
            app:drawableLeftCompat="@drawable/ic_view_events" />

        <ImageView
            android:id="@+id/view_event_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            app:tint="#050505"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/del_club_userRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewEventsRelativeLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/whitecard3"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/del_club_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:text="@string/delete_club_account_text"
            android:textColor="#050505"
            android:textSize="20sp"
            android:gravity="center"
            app:drawableLeftCompat="@drawable/ic_delete" />

        <ImageView
            android:id="@+id/del_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            app:tint="#050505"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/event_requestRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/del_club_userRelativeLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/whitecard3"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/event_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_preview_24"
            android:drawablePadding="10dp"
            android:text="@string/event_request_text"
            android:textColor="#050505"
            android:gravity="center"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/event_req_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            app:tint="#050505"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/club_requestRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_requestRelativeLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/whitecard3"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/club_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_view_club_request"
            android:drawablePadding="10dp"
            android:text="Club request"
            android:textColor="#050505"
            android:gravity="center"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/club_req_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            app:tint="#050505"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/logoutRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/whitecard3"
        android:padding="10dp">

        <TextView
            android:id="@+id/logout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_logout2"
            android:drawablePadding="10dp"
            android:text="@string/logout_text"
            android:textColor="#050505"
            android:gravity="center"
            android:textSize="20sp" />

    </RelativeLayout>



</RelativeLayout>
